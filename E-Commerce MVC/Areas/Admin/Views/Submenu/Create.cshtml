@model E_Commerce_MVC.Areas.Admin.Models.AllMenu.Submenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Create Submenu</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuID" class="control-label">Menus</label>
                <select asp-for="MenuID" id="menu" class="form-control">
                    <option selected="true" disabled="disabled">Choose Menu</option>
                </select>
                <span asp-validation-for="MenuID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>

    $(document).ready(function () {

        //GetAllSubmenus----------------------------------------------------------------------------------//

        $.ajax({
            type: "Get",
            url: "/Admin/Menu/GetAllMenus",
            success: function (response) {
                for (let f of response) {
                    $("#menu").append(`<option value=${f.id}>${f.name}</option>`);
                }
            }

        });

    });


</script>

}
